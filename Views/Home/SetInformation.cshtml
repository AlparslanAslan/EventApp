@model EventApp.Models.Info

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .button {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
        color: #fff;
        background-color: #428bca;
        border-color: #357ebd;
    }
</style>
@if (@ViewBag.Message != null)  
{  
<div style="border: 1px solid red">  
@ViewBag.Message  
</div>  
}  
<form method="post" action="/Home/AddCity">
    <!-- Form 1 fields -->
    <input type="text" name="sehir" />
    <input type="submit" value="Şehir Ekle" />
</form>

<table id="sehirler">
        <thead>
            <tr>
                <th>Şehir</th>
                <th>Kaldır</th>
                
            </tr>
          
        </thead>
        <tbody>
            @foreach (var item in Model.Sehirler)
            {
                <tr>
                    <td>@item</td>
                     <td>
                    <form method="post" action="/Home/DeleteCity">
                        <input type="hidden" name="sehir" value="@item" />
                        <button class="button" type="submit">Kaldır</button>
                    </form>
                    </td>
                </tr>
                
            }
        </tbody>
</table>
<form method="post" action="/Home/AddCategory">
    <!-- Form 1 fields -->
    <input type="text" name="kategori" />
    <input type="submit" value="Kategori Ekle" />
</form>
<table id="kategoriler">
        <thead>
            <tr>
                <th>Kategoriler</th>
                <th>Kaldır</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Kategoriler)
            {
                <tr>
                    <td>@item</td>
                    <td>
                    <form method="post" action="/Home/DeleteCategory">
                        <input type="hidden" name="kategori" value="@item" />
                        <button class="button" type="submit">Kaldır</button>
                    </form>
                    </td>
                </tr>
            }
        </tbody>
</table>

