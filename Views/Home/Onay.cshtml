@model IEnumerable<EventApp.Models.Event>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .button {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
        color: #fff;
        background-color: #428bca;
        border-color: #357ebd;
    }
</style>

<form method="post" action="/Home/Onay" id="OnayForm">
    <table id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>Kontenjan</th>
                <th>Kategori</th>
                <th>Şehir</th>
                <th>Oluşturan</th>
                <th>Aktif</th>
                <th>Adres</th>
                <th>Onay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Baslik</td>
                    <td>@item.Aciklama</td>
                    <td>@item.Tarih</td>
                    <td>@item.Kontenjan</td>
                    <td>@item.Kategori</td>
                    <td>@item.Sehir</td>
                    <td>@item.Olusturan</td>
                    <td>@item.Aktif</td>
                    <td>@item.Adres</td>
                    <td>
                        <form method="post" asp-action="Onay">
                            <input type="hidden" name="mainid" value="@item.Id"/>
                            <input class="form-check-input" type="checkbox" name="onaylimi" asp-for="@item.Onay" />
                        </form>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
    <button class="button" type="submit">Submit</button>
</form>

@section scripts{
    <script>
        $(function () {
                $(".form-check-input").change(function()
                {
                    $(this).closest('form').submit();
                });
        });
    </script>
}

